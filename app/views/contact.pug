doctype html
html
  head
    title Contact Us - Exercise Tracker
    link(rel="stylesheet", href="/contact.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css")
  include navbar

  block content
    .contact-hero
      .hero-content
        h1 Contact Us
        p Have questions? Get in touch with us and we’ll be happy to help!

    .contact-form-container
      h2 Get in Touch
      p Fill out the form below and we’ll get back to you as soon as possible.

      form(action="/send-message" method="POST")
        .form-group
          label(for="name") Your Name
          input(type="text" id="name" name="name" required placeholder="Enter your name")

        .form-group
          label(for="email") Your Email
          input(type="email" id="email" name="email" required placeholder="Enter your email")

        .form-group
          label(for="message") Your Message
          textarea(id="message" name="message" rows="5" required placeholder="Type your message here")

        button(type="submit")
          i.fas.fa-paper-plane
          |  Send Message

    .contact-info
      h2 Other Ways to Reach Us
      .info-item
        i.fas.fa-envelope
        p Email: support@exercisetracker.com

      .info-item
        i.fas.fa-phone
        p Phone: +1 234 567 890

      .info-item
        i.fas.fa-map-marker-alt
        p Address: 123 Fitness Street, Healthy City, London
